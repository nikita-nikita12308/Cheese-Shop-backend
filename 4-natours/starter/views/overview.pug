extends base

block content
    main.main
        nav.filters(style='padding-bottom: 20px;')
            ul.filters__list
                li.filters__item
                    a.filters__link(href='#')
                        label.form__label(for='name') Рейтинг
                            input#name.form__input(type='text', value=`${tours[0].ratingsAverage}`, required, name='name')
                li.filters__item
                    a.filters__link(href='#')
                        label.form__label(for='name') Складність
                            input#name.form__input(type='text', value=`${tours[0].difficulty}`, required, name='name')
                li.filters__item
                    a.filters__link(href='#')
                        label.form__label(for='name') Звідки
                            input#name.form__input(type='text', value=`${tours[0].startLocation.description}`, required, name='name')
                a.btn.btn--green.btn--small(href=`/tours/$`, style='height: 50px; margin-top: 25px; margin-left:-10px; padding-right:') Знайти
                li.filters__item
                    a.filters__link(href='#')
                        label.form__label(for='name') Сортувати ціну за:
                a.btn.btn--green.btn--small(href=`/tours/$`, style='height: 50px; margin-top: 25px; margin-left:-10px;') Спаданням
                a.btn.btn--green.btn--small(href=`/tours/$`, style='height: 50px; margin-top: 25px; margin-left:10px;') Зростанням
                // Додайте інші пункти меню фільтрів за необхідністю



        .card-container
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span= tour.name

                    .card__details
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                        p.card__text= tour.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= tour.startDates[0].toLocaleString('uk-ua', { month: 'long', year: 'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `${tour.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${tour.maxGroupSize} people`

                    .card__footer
                        p
                            span.card__footer-value= `$${tour.price} `
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value= tour.ratingsAverage
                            span.card__footer-text= ` rating (${tour.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/tours/${tour.slug}`) Деталі
                        a.btn.btn.btn--small.btn--buy(href='#')
                            img(src='/img/icon-shop.png', style='width: 20px;')