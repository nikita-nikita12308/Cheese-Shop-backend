extends base

block content
    main.main
        .login-form.loginUser
            h2.heading-secondary.ma-bt-lg Увійти в акаунт
            form.form
                .form__group
                    label.form__label(for='email') Email адреса
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Пароль
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Вхід