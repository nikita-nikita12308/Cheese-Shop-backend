header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All products
    .header__logo
        img(src='/img/logo-white.png' alt='Cheese Logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            if user.role === 'user'
                a.button.nav__el Корзина
            if user.role === 'admin'
                a.button.nav__el AdminBoard
            a.nav__el(href='#')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name} photo`)
                span= user.name.split(' ')[0]
        else
            a.button.nav__el(href='/login') Sign in
            a.button.nav__el.nav__el--cta(href='/signup') Sign up
