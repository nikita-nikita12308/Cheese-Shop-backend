extends base

mixin navItemAccount(link, text, icon, active)
    li(class=`${active ? 'side-nav--active' : ''}`)
        a(href=`${link}`)
            svg
                use(xlink:href=`img/icons.svg#icon-${icon}`)
            | #{text}

block content
    main.main
        .user-view
            nav.user-view__menu
                .admin-nav
                    h5.admin-nav__heading Admin
                    ul.side-nav
                        +navItemAccount('#', 'Manage tours', 'map', false)
                        +navItemAccount('#', 'Manage users', 'users', false)
                        +navItemAccount('#', 'Manage reviews', 'star', false)
                        +navItemAccount('#', 'Manage booking', 'briefcase', false)


            .user-view__content
                .user-view__form-container.updateCurrentUser
                    h2.heading-secondary.ma-bt-md статистика
                        .card(style='padding-bottom: 15px')
                            .card__details
                                h4.card__sub-heading Сьогодні:
                                p.card__text dfg
                                p.card__text dfg
                                p.card__text dfg

                            .card__billing_footer(style='margin-bottom: 15px; text-align:center;')
                                h3.billing(style='text-align: left; padding-left: 30px;' ) Статус:
                .line &nbsp;
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Month Data
